@model List<UserRolesViewModel>
@{
    ViewBag.Title = "Manage User In Role";
    var userId = ViewBag.userId;
}


<h2 class="text-info">
    Manage User In Role
</h2>
<hr />

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users in role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m1">
                    <input hidden="hidden" asp-for="@Model[i].RoleId" />
                    <input hidden="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>

                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-outline-success" value="Update" />
            <a asp-action="EditAspUser" asp-controller="Admin" class="btn btn-outline-secondary" asp-route-id="@userId">Back</a>

        </div>
    </div>

</form>