@model EditUserViewModel
@{
    ViewBag.Title = "Edit User";
}
<h2 class="text-info">
    Edit User
</h2>
<hr />
<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row form-group">
        <label asp-for="Id" class="col-md-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" disabled />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="Username" class="col-md-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Username" class="form-control" placeholder="Username..." />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="Email" class="col-md-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email..." />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-form-label col-md-2" asp-for="Gender"></label>
        <div class="col-sm-10">
            <select class="custom-select" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                <option value="">Select gender</option>
            </select>
            <span class="text-danger" asp-validation-for="Gender"></span>
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="Address" class="col-md-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Address..." />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-10">
            <input type="submit" value="Update" class="btn btn-outline-success" />
            <a asp-action="ListUsers" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>

    @if (Model.Roles.Any())
    {
        <div class="card mb-3">
            <div class="card-header">
                <h3>User Roles</h3>
            </div>
            <div class="card-body">
                @foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">
                        @role
                    </h5>
                }
            </div>
            <div class="card-footer">
                <a asp-action="ManageUsersInRole" class="btn btn-outline-info" asp-controller="Admin" asp-route-userId="@Model.Id">
                    Manage Roles
                </a>
            </div>


        </div>

    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h3>User Roles</h3>
            </div>
            <div class="card-body">
                <h3 class="card-title">
                    None at the moment
                </h3>
            </div>
            <div class="card-footer">
                <button class="btn btn-outline-primary" type="submit">Manage Claims</button>
            </div>
        </div>
    }


    @if (Model.Cliams.Any())
    {
        <div class="card mb-3">
            <div class="card-header">
                <h3>User Claims</h3>
            </div>
            <div class="card-body">
                @foreach (var claims in Model.Cliams)
                {
                    <h5 class="card-title">
                        @claims
                    </h5>
                }
            </div>
            <div class="card-footer">
                <a asp-action="ManageUserClaims" class="btn btn-outline-info" asp-controller="Admin" asp-route-userId="@Model.Id">
                    Manage Claims
                </a>
            </div>


        </div>

    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h3>User Roles</h3>
            </div>
            <div class="card-body">
                <h3 class="card-title">
                    None at the moment
                </h3>
            </div>
            <div class="card-footer">
                <a asp-action="ManageUserClaims" class="btn btn-outline-info" asp-controller="Admin" asp-route-userId="@Model.Id">
                    Manage Claims
                </a>
            </div>
        </div>
    }
</form>
