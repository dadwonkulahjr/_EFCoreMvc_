@model List<UserRoleViewModel>
@{ 
    ViewBag.Title = "Edit User In Role";
    var roleId = ViewBag.roleId;
}

<h2 class="text-info">
    Edit User In Role
</h2>
<hr />

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users in role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m1">
                <input hidden="hidden" asp-for="@Model[i].Username" />
                <input hidden="hidden" asp-for="@Model[i].UserId" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].Username
                </label>

            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-outline-success" value="Update" />
            <a asp-action="EditRole" asp-controller="Admin" class="btn btn-outline-secondary" asp-route-id="@roleId">Back</a>

        </div>
    </div>

</form>
