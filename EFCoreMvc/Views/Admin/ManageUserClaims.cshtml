@model UserClaimViewModel
@{
    ViewBag.Title = "Manage User claims";
}

<h2 class="text-info">
    Manage User Claims
</h2>
<hr />

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage Claims</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.UserClaims.Count; i++)
            {
                <div class="form-check m1">
                    <input hidden="hidden" asp-for="@Model.UserClaims[i].ClaimType" />
                    <input asp-for="@Model.UserClaims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.UserClaims[i].IsSelected">
                        @Model.UserClaims[i].ClaimType
                    </label>

                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-outline-success" value="Update" />
            <a asp-action="EditAspUser" asp-controller="Admin" class="btn btn-outline-secondary" asp-route-id="@Model.UserId">Back</a>

        </div>
    </div>

</form>