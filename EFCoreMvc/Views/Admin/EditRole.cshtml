@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<h2 class="text-info">
    Edit Role
</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="text-danger" asp-validation-summary="All"></div>
        <form method="post">
            <div class="row form-group">
                <label class="col-form-label col-md-2" asp-for="Id"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Id" disabled />
                </div>
            </div>
            <div class="row form-group">
                <label class="col-form-label col-md-2" asp-for="RoleName"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" placeholder="Role Name..." />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-outline-success">Update</button>
                    <a asp-action="ListRoles" asp-controller="Admin" class="btn btn-outline-secondary">Back</a>
                </div>
            </div>

        </form>
        <div class="card">
            <div class="card-header">
                <h5>
                    Users in this role
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {

                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">
                            @user
                        </h5>
                    }
                }
                else
                {
                    <h5 class="card-title">
                        None at this moment.
                    </h5>
                }


            </div>
            <div class="card-footer">

                <a asp-action="EditUserInRole" asp-controller="Admin" class="btn btn-outline-primary mb-2" asp-route-roleId="@Model.Id">Add or remove users</a>

            </div>
        </div>

    </div>

</div>
