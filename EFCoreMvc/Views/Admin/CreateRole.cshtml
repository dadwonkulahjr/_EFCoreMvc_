@model CreateRoleViewModel
@{ 
    ViewBag.Title = "Create New Role";
}
<h2 class="text-info">
    Create New Role
</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post">
            <div class="form-group">
                <label class="col-form-label" asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" placeholder="Role Name..." />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-success">Create new role</button>
                <a asp-action="ListRoles" asp-controller="Admin" class="btn btn-outline-secondary">Back</a>
            </div>

        </form>


    </div>


</div>