@model Employee

@{ 
    ViewBag.Title = "Employee Details";
}

<h2 class="text-info">
    Employee Details
</h2>
<hr />
<div class="card-deck text-center text-primary">
    <div class="card mt-2">
        <h2 class="card-header">
            @Model.Name
        </h2>
        <div class="card-body">
            <h3>
                Email : @Model.Email
            </h3>
            <h3>
                Gender : @Model.Gender
            </h3>
            <h3>
                Salary : @Model.Salary.Value.ToString("c")
            </h3>

        </div>
        <div class="card-footer">
            <a asp-action="Index" asp-controller="Employee" class="btn btn-outline-dark mb-2">Back</a>
            <a asp-action="Edit" asp-controller="Employee" class="btn btn-outline-info mb-2" asp-route-id="@Model.EmployeeId">Edit</a>
            <a asp-action="Delete" asp-controller="Employee" class="btn btn-outline-danger mb-2" asp-route-id="@Model.EmployeeId">Delete</a>
        </div>
    </div>


</div>
