@model Employee
@{
    ViewBag.Title = "Create Employee";
}

<h2 class="text-info">
    Create new employee
</h2>
<hr />
<form method="post" asp-controller="Employee" asp-action="Create">
    <div class="row form-group">
        <label class="col-form-label col-md-2" asp-for="@Model.Name"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Name" class="form-control" placeholder="Name..." />
            <span class="text-danger" asp-validation-for="@Model.Name"></span>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-form-label col-md-2" asp-for="@Model.Email"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Email" class="form-control" placeholder="Email..." />
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-form-label col-md-2" asp-for="@Model.Gender"></label>
        <div class="col-sm-10">
            <select class="custom-select" asp-for="@Model.Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                <option value="">Select gender</option>
            </select>
            <span class="text-danger" asp-validation-for="@Model.Gender"></span>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-form-label col-md-2" asp-for="@Model.Salary"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Salary" class="form-control" placeholder="Salary..." />
            <span class="text-danger" asp-validation-for="@Model.Salary"></span>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-form-label col-md-2" asp-for="@Model.Department"></label>
        <div class="col-sm-10">
            <select class="custom-select" asp-for="@Model.Department" asp-items="Html.GetEnumSelectList<Department>()">
                <option value="">Select department</option>
            </select>
            <span class="text-danger" asp-validation-for="@Model.Department"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-success">Create</button>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
</form>